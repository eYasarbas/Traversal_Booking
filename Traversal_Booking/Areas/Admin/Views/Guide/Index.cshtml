@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    img{
        border-radius:50%;
    }
</style>

<h1>Guide List</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Name</th>
        <th>Information</th>
        <th>State</th>
        <th>Edit</th>
    </tr>
    @{
        var count = 1;
        foreach (var item in Model)
        {
            <tr>
                <td>@count</td>
                <td>
                    <img src="@item.Image" height="100" width="100"/>
                </td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                @{
                    if (item.Status)
                    {
                        <td>
                            <a href="#" class="btn btn-outline-warning">Do Passive</a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a href="#" class="btn btn-outline-success">Do Active</a>
                        </td>
                    }
                }
                <td>
                    <a href="#" class="btn btn-outline-success">Edit</a>
                </td>
                <td></td>
            </tr>
            count++;
        }
    }
</table>
<a href="/Admin/Guide/AddGuide" class="btn btn-outline-primary">Add New Guide</a>