@model EntityLayer.Concrete.Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<h1>New Reservation Page</h1>
<form method="post" action="/Member/Reservation/NewReservation">
  @*   <div class="form-group">
        @Html.Label("Location")
        @Html.DropDownListFor(x => x.Destination, (List<SelectListItem>)ViewBag.Destination,
            new { @class = "form-control" })
    </div> *@
    <div class="form-group">
        <label asp-for="PersonCount">Person Count</label>
        <input type="text" asp-for="PersonCount" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="ReservationDate">Date</label>
        <input type="date" asp-for="ReservationDate" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Description">If Add</label>
        <input type="text" asp-for="Description" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-outline-success">Do Reservation</button>
</form>

@if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}